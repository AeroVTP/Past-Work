<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:fillViewport="false">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Addition Practice Mode"
                android:id="@+id/additionSignTextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#1300ff"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/answerEditText"
                android:textColor="#1300ff"
                android:layout_below="@+id/num2TextView"
                android:layout_alignLeft="@+id/carryForwardTextView"
                android:hint="Answer Here"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add the 2 Numbers and then turn your device. Try to get 5 full rotations without a mistake!"
                android:textColor="#1300ff"
                android:id="@+id/textView"
                android:layout_below="@+id/additionSignTextView"
                android:layout_alignLeft="@+id/additionSignTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Num 1"
                android:textColor="#1300ff"
                android:id="@+id/num1TextView"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/answerEditText"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Num 2"
                android:textColor="#1300ff"
                android:id="@+id/num2TextView"
                android:layout_below="@+id/num1TextView"
                android:layout_alignLeft="@+id/answerEditText"/>



        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thats My Answer!"
                android:textColor="#ffffff"
                android:id="@+id/thatsMyAnswerButton"
                android:layout_alignTop="@+id/answerEditText"
                android:layout_toRightOf="@+id/answerEditText"
                android:background="#0015ff"/>

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to Learn More!"
                android:id="@+id/helpButton"
                android:textColor="#ffffff"
                android:layout_below="@+id/answerEditText"
                android:layout_alignLeft="@+id/answerEditText"
                android:background="#0200ff"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/carryForwardPracticeTextView"
                android:text=" "
                android:textColor="#1300ff"
                android:layout_below="@+id/helpButton"
                android:layout_alignLeft="@+id/helpButton"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/firstNumberTextView"
                android:textColor="#1300ff"
                android:layout_below="@+id/carryForwardPracticeTextView"
                android:layout_alignLeft="@+id/helpButton"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/secondNumberTextView"
                android:textColor="#1300ff"
                android:layout_below="@+id/firstNumberTextView"
                android:layout_alignLeft="@+id/helpButton"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/textView6"
                android:textColor="#1300ff"
                android:layout_alignLeft="@+id/helpButton"
                android:layout_below="@+id/secondNumberTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/answerTextView"
                android:textColor="#1300ff"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/helpButton"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/explanationTextView"
                android:textColor="#1300ff"
                android:layout_below="@+id/answerTextView"
                android:layout_alignLeft="@+id/helpButton"/>


    </RelativeLayout>
</ScrollView>