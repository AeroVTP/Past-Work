<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:fillViewport="false">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Addition Learn Mode"
                android:id="@+id/additionSignTextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#1300ff"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/addition1EditText"
                android:layout_below="@+id/additionSignTextView"
                android:layout_alignParentLeft="true"
                android:textColor="#1300ff"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/addition2EditText"
                android:layout_below="@+id/addition1EditText"
                android:layout_alignParentLeft="true"
                android:textColor="#1300ff"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add!"
                android:id="@+id/addButton"
                android:layout_below="@+id/addition2EditText"
                android:layout_alignParentLeft="true"
                android:background="#1300ff"
                android:textColor="#ffffff"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/carryForwardTextView"
                android:text="Carry Forward"
                android:textColor="#1300ff"
                android:layout_below="@+id/addButton"
                android:layout_alignLeft="@+id/addButton"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="FirstNumber"
                android:id="@+id/num1TextView"
                android:layout_below="@+id/carryForwardTextView"
                android:layout_alignLeft="@+id/carryForwardTextView"
                android:textColor="#1300ff"/>



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SecondNumber"
                android:id="@+id/num2TextView"
                android:layout_below="@+id/num1TextView"
                android:layout_alignLeft="@+id/num1TextView"
                android:textColor="#1300ff"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Explanation"
                android:id="@+id/explanationTextView"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/answerTextView"
                android:layout_alignLeft="@+id/answerTextView"
                android:textColor="#1300ff"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Answer"
                android:id="@+id/answerTextView"
                android:textColor="#1300ff"
                android:layout_below="@+id/additionLineTextView"
                android:layout_alignLeft="@+id/additionLineTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="+"
                android:id="@+id/plusSignTextView"
                android:layout_alignTop="@+id/num2TextView"
                android:layout_toRightOf="@+id/num2TextView"
                android:textColor="#1300ff"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="_____________"
                android:id="@+id/additionLineTextView"
                android:textColor="#1300ff"
                android:layout_below="@+id/num2TextView"
                android:layout_alignLeft="@+id/num2TextView"/>

    </RelativeLayout>
</ScrollView>